# don't display the copyright page
startup_message off

# visible bell
vbell_msg "beep"

# Change scrollback to 10000 lines
defscrollback 10000

# goddamn C-Q and C-S
bind ^S
bind ^Q

# status line at the bottom
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'
