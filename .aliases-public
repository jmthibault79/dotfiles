alias javadebug="java -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=33054"
alias antdebug="ant -Dtest.debug=true -Dtest.debug.port=33054"
alias sbtdebug="sbt -jvm-debug 33054"

alias pullprune="git pull --ff-only --prune"
alias fr="git fetch && git rebase -i"

alias java7="JAVA_HOME=$JAVA7_HOME java"
alias java8="JAVA_HOME=$JAVA8_HOME java"

alias ant7="JAVA_HOME=$JAVA7_HOME ant"
alias ant8="JAVA_HOME=$JAVA8_HOME ant"

alias hg="history | grep"

############################################
# Docker Clean
# From https://www.calazan.com/docker-cleanup-commands/

# Kill all running containers.
alias dockerkillall='docker kill $(docker ps -q)'

# Delete all stopped containers.
alias dockercleanc='printf "\n>>> Deleting stopped containers\n\n" && docker rm $(docker ps -a -q)'

# Delete all untagged images.
alias dockercleani='printf "\n>>> Deleting untagged images\n\n" && docker rmi $(docker images -q -f dangling=true)'

# Delete all stopped containers and untagged images.
alias dockerclean='dockercleanc || true && dockercleani'

# Kill and delete all stopped containers and untagged images.
alias dnd='dockerkillall || true && dockerclean'
############################################

